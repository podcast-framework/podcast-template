---
/**
 * Homepage
 *
 * This is your podcast's homepage. Customize it to match your brand!
 */

import BaseLayout from '@podcast-framework/core/layouts/BaseLayout.astro';
import { createSanityClient, getPodcastInfo } from '@podcast-framework/core';
import config from '../../podcast.config.js';

// Create Sanity client
const sanityClient = createSanityClient(config.sanity);

// Fetch podcast info from Sanity
const podcastInfo = await getPodcastInfo(sanityClient);
---

<BaseLayout
  title={`${config.name} - Home`}
  description={config.description}
  podcastInfo={podcastInfo}
>
  <main class="max-w-4xl mx-auto px-4 py-12 flex-grow">
    <!-- Hero Section -->
    <div class="text-center mb-12">
      <h1 class="text-5xl font-bold mb-4">{config.name}</h1>
      {config.tagline && (
        <p class="text-xl text-gray-600 mb-6">{config.tagline}</p>
      )}
      <p class="text-lg text-gray-700 max-w-2xl mx-auto">
        {config.description}
      </p>
    </div>

    <!-- Getting Started -->
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-8 mb-8">
